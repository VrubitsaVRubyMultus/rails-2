<p id="notice"><%= notice %></p>

<p>
  <strong>Head:</strong>
  <%= @question.head %>
</p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>attachments:</strong>
  <ul>
  <% @question.attachments.each do |a| %>
    <li><%= link_to a.file.file.filename, a.file.url %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
<br><br>
<h3><strong>Ответы:</strong></h3>
<%= link_to "ответить", new_question_answer_path(@question) %>
<td>
<br><br>
  <strong>
        <% @question.answers.each do |answer| %>
          <p><%= answer.head %></p>
          <p><%= answer.body %></p>
          <p><%= answer.sources %></p>        
          <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
          <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>  
  </strong>
</td>